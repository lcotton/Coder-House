<div class="container mt-3">
<h2 style="color:crimson;">Vista de Productos</h2>

<% const hayProductos = productos.length > 0; %>
<% if(hayProductos){ %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto URL</th>
        </tr>
        <% for (const producto of productos) {%>
        <tr>
            <td>
                <%=producto.nombre%>
            </td>
            <td>
                $<%=producto.precio%>
            </td>
            <td>
                <img src= <%=producto.fotoUrl%> alt="" width="64" height="64">
            </td>
        </tr>
        <%};%>
    </table>
</div>
<% } else{ %>
<h3 class="alert alert-danger">no se encontraron productos</h1>
    <% } %>
<button id="myButton" class="btn btn-secondary" >Form Page</button>

    <script type="text/javascript">
        document.getElementById("myButton").onclick = function () {
            location.href = "/";
        };
    </script>